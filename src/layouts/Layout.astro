---
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>Mocan Kitchen | Happiness is Homemade</title>
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Core Palette */
		--color-primary: #8B5E3C; /* Caramel Brown */
		--color-primary-dark: #5D3A20; /* Darker Caramel */
		--color-background: #FFF8E7; /* Creamy White */
		--color-accent: #2E8B57; /* Forest Green */
		--color-decor: #FF7F50; /* Warm Orange/Pink */
		
		/* Text Colors */
		--color-text-main: #4A3B32; /* Dark Brown for text */
		--color-text-light: #FDFBF7; /* Off-white for text on dark bg */

		/* Fonts */
		--font-heading: 'Fredoka One', cursive;
		--font-body: 'Quicksand', sans-serif;
	}

	html {
		font-family: var(--font-body);
		background-color: var(--color-background);
		color: var(--color-text-main);
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		width: 100%;
		overflow-x: hidden;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
		font-weight: 400; /* Fredoka One only has 400 */
		margin: 0;
	}
	
	p {
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	a {
		text-decoration: none;
		color: inherit;
		transition: all 0.3s ease;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	button {
		font-family: var(--font-body);
		cursor: pointer;
		border: none;
		outline: none;
	}
	
	/* Utility for rounded corners/images */
	.rounded-box {
		border-radius: 1.5rem;
	}
	
	/* Utility for container */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
</style>
