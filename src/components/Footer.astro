---
import { Image } from 'astro:assets';
import logo from '../assets/mocan_kitchen_logo.png';
---

<footer id="footer">
  <div class="container footer-content">
    <div class="footer-block brand-block">
      <div class="logo-wrapper">
         <Image src={logo} alt="Mocan Kitchen" class="footer-logo" width={60} height={60} />
         <span class="footer-brand">Mocan Kitchen</span>
      </div>
      <p class="tagline">Make your day sweet.</p>
    </div>

    <div class="footer-block info-block">
      <h4>Visit Us</h4>
      <p>üìç 123 Happiness Street, Foodie City</p>
      <p>üïí Mon-Sun: 9:00 AM - 8:00 PM</p>
      <p>üìû (02) 1234-5678</p>
    </div>

    <div class="footer-block social-block">
      <h4>Stay Connected</h4>
      <div class="social-icons">
        <a href="#" aria-label="Facebook">FB</a>
        <a href="#" aria-label="Instagram">IG</a>
        <a href="#" aria-label="Line">LN</a>
      </div>
    </div>
  </div>
  
  <div class="copyright">
    <p>&copy; 2017-{new Date().getFullYear()} Mocan Kitchen. All Rights Reserved.</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-primary-dark);
    color: var(--color-text-light);
    padding: 4rem 0 1rem 0;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-block h4 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-decor);
  }

  .brand-block .logo-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .footer-logo {
      border-radius: 50%;
      border: 2px solid white;
      background: white;
  }

  .footer-brand {
    font-family: var(--font-heading);
    font-size: 1.5rem;
  }

  .info-block p {
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    width: 40px;
    height: 40px;
    background-color: rgba(255,255,255,0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.8rem;
    border: 1px solid rgba(255,255,255,0.2);
  }

  .social-icons a:hover {
    background-color: var(--color-decor);
    border-color: var(--color-decor);
  }

  .copyright {
    text-align: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    font-size: 0.8rem;
    opacity: 0.6;
  }
</style>
