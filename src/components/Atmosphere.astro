---
import { Image } from 'astro:assets';
import sofaImg from '../assets/collage_sofa.png';
import latteImg from '../assets/collage_latte.png';
import petImg from '../assets/collage_pet.png';
import peopleImg from '../assets/collage_people.png';
---

<section id="atmosphere" class="atmosphere">
  <div class="container">
    <div class="section-header">
      <h2>The Vibe</h2>
      <p>A peek into our cozy little world.</p>
    </div>

    <div class="gallery-grid">
      <div class="gallery-item item-1">
        <Image src={sofaImg} alt="Cozy Sofa" class="gallery-img" />
        <div class="tape"></div>
      </div>
      <div class="gallery-item item-2">
        <Image src={latteImg} alt="Latte Art" class="gallery-img" />
        <div class="tape"></div>
      </div>
      <div class="gallery-item item-3">
        <Image src={petImg} alt="Shop Pet" class="gallery-img" />
        <div class="tape"></div>
      </div>
      <div class="gallery-item item-4">
        <Image src={peopleImg} alt="Happy People" class="gallery-img" />
        <div class="tape"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .atmosphere {
    padding: 5rem 0;
    background-color: var(--color-background);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Mobile default */
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    background: white;
    padding: 0.5rem 0.5rem 2rem 0.5rem; /* Polaroid style padding */
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    transform: rotate(0deg);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: scale(1.02) !important;
    z-index: 10;
  }

  .gallery-img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  /* Tape effect */
  .tape {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 25px;
    background-color: rgba(255, 255, 255, 0.6);
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    transform: translateX(-50%) rotate(-2deg);
    opacity: 0.8;
  }

  /* Masonry random rotation effect */
  .item-1 { transform: rotate(-2deg); }
  .item-2 { transform: rotate(3deg); margin-top: 2rem; }
  .item-3 { transform: rotate(1deg); }
  .item-4 { transform: rotate(-3deg); margin-top: -2rem; }

  @media (min-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(4, 1fr);
    }
    
    .item-2 { margin-top: 3rem; }
    .item-4 { margin-top: 3rem; }
  }
</style>
